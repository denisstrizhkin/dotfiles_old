# Turn on sticky-group mode
sticky yes


# Ignore some windows
ignore "Top Panel"
ignore "Bottom Panel"
ignore "Desktop"


# Autogroup
autogroup 0 "Top Panel"
autogroup 0 "Bottom Panel"
autogroup 0 "Desktop"


# Reset all keybindings
unbind-key      all
unbind-mouse    all


# Switch workspace
bind-key    4-1    group-only-1
bind-key    4-2    group-only-2
bind-key    4-3    group-only-3
bind-key    4-4    group-only-4
bind-key    4-5    group-only-5


# Moved window to workspace
bind-key    4S-1    window-movetogroup-1
bind-key    4S-2    window-movetogroup-2
bind-key    4S-3    window-movetogroup-3
bind-key    4S-4    window-movetogroup-4
bind-key    4S-5    window-movetogroup-5


# Quit, Restart
bind-key  4S-c  quit
bind-key  4-z  restart


# Programs
bind-key  4-r    kitty
bind-key  4-e    firefox
bind-key  4-w    "emacsclient -c"
bind-key  4-p    "rofi -show drun"
bind-key  4-F12  "screenshot"


# Close window
bind-key  4-f  window-close


# Window tiling
# bind-key  4-h  window-htile
bind-key  4-v  window-vtile
bind-key  4-x  window-maximize


# Window cycling
bind-key  4-k  window-cycle
bind-key  4-j  window-rcycle
bind-key  4-u  window-lower
bind-key  4-i  window-raise


# Mouse keys
bind-mouse  4-1  window-move
bind-mouse  4-3  window-resize
